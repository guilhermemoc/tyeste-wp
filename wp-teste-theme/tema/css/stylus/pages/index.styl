* {
  color: #000;
  margin: 0;
  padding: 0;
}

body {
  width: 100%;
  height: auto;
  background-color: #fff;
}

.container {
  width: 100%;
  margin: 0 auto;
  display: block;
  height: auto;
  text-align: center;
  padding-top: 10vh;
}

.post{
  width: 20%
  height: 350px;
  background: transparent;
  border-radius: 4px;
  border: 1px solid #242a34;
  display: inline-block;
  margin: 3px;
}

.post-thumb{
  border-radius: 50%;
  margin: 5vh auto;
  max-width: 200px;
}

.interna{
  width: 60%;
  color: #000;
  background-color: transparent;
  border: 1px solid #000;
  height: auto;
  margin: 10% auto;
}
