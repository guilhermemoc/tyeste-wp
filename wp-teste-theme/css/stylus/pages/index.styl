* {
  color: #000;
  margin: 0;
  padding: 0;
}

body {
  width: 100%;
  height: auto;
  background-color: #fff;
}

.container {
  width: 100%;
  margin: 0 auto;
  display: block;
  height: auto;
  text-align: center;
}

.post{
  width: 20%
  height: 350px;
  background: transparent;
  border-radius: 4px;
  border: 1px solid #242a34;
  display: inline-block;
  margin: 2%;
}

.post-thumb{
  border-radius: 50%;
  margin: 10px auto;
}
